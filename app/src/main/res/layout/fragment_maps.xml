<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground">

    <include layout="@layout/fragment_google_maps" />

    <ImageView
        android:id="@+id/myLocationIcon"
        android:layout_width="@dimen/location_icon_size"
        android:layout_height="@dimen/location_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/my_location_icon_description"
        android:src="@drawable/ic_baseline_my_location_24" />

</RelativeLayout>